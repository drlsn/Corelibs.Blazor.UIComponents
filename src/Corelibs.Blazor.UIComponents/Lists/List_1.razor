
<div class="vlist-card">
    <div class="list-title-panel">
        <div class="list-title-texts">
            @if (Title.IsOk())
            {
                <h4 class="list-title">@Title</h4>
            }
            @if (Description.IsOk())
            {
                <span class="list-description">@Description</span>
            }
        </div>
        <Dropdown Model=@DropdownModel OnOptionSelected=OnMenuOptionSelected>
            <TriggerComponent>
                <BurgerButton />
            </TriggerComponent>
        </Dropdown>
        @*<BurgerButton />*@
    </div>
    <div class="items">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter] public Dropdown.OnOptionSelectedDelegate OnMenuOptionSelected { get; set; }
    [Parameter] public Dropdown.ViewModel DropdownModel { get; set; }
}
